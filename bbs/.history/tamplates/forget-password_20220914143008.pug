extend layout.pug


block content
  <div class="container">
    <div class="form row">
      <h3 class="form-title">密码找回</h3>
      <form action="/forget-password" method="post" class="form-horizontal col-sm-offset-3 col-md-offset-3">
        <div class="col-sm-9 col-md-9">
          <div class="form-group">
            <i class="fa fa-user" aria-hidden="true"></i>
            <input type="text" name="name" class="form-control" placeholder="请输入用户名" required autofocus>
          </div>

          <div class="form-group">
            <i class="fa fa-key fa-fw" aria-hidden="true"></i>
            <input type="password" name="password" class="form-control required" placeholder="请输入密码" required>
          </div>

          <div class="d-grid gap-2">
            br
            <button class="btn btn-success">登录</button>
          </div>
        </div>
      </form>
    </div>
  </div>

  form(action="/forget-password" method="post")
    <div>名字: <input type="text" name="name"></div>
    <div>邮箱: <input type="email" name="email"></div>
    button 找回密码
