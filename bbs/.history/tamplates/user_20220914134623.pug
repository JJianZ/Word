extend layout.pug


block content
  <div class="container">
    <div class="row">
      <div class="col-lg-2 hidden-md hidden-sm">
        <div class="card">
          <div class="card-body">
            <div class="media-body-user">
              <img class="avatar" src="/avatar/#{user.avatar}" width="50" height="50">
              <span>#{user.name}</span>
            </div>
            <div class="media-body-content">
              <div class="card-posts">
                <div class="card-body">
                  <h3>Ta发过的帖子</h3>
                  each post in posts
                    div
                      a(href="/post/#{postId}")= post.title
                </div>
              </div>
              <div class="card-comments">
                <div class="card-body">
                  <h3>Ta发过的评论</h3>

                  each comment in comments
                    <div>
                      <a href="/post/#{comment.postId}">#{comment.title}</a>
                      <br>
                      span= comment.content
                      <hr>
                    </div>
                </div>
              </div>
            </div>
          <div>
        </div>
      </div>
    </div>
  </div>
