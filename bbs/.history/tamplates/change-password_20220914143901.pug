extend layout.pug

block append scripts
  script(src="/spark-md5.min.js")

block content
  <div class="container">
    <div class="form row">
      <h3 class="form-title">修改密码</h3>
      <form action="" method="post" class="form-horizontal col-sm-offset-3 col-md-offset-3">
        <div class="col-sm-9 col-md-9">
          <div class="form-group">
            <i class="fa fa-key fa-fw" aria-hidden="true"></i>
            <input type="password" name="password" class="form-control required" placeholder="请输入新密码" required>
          </div>

          <div class="form-group">
            <i class="fa fa-key fa-fw" aria-hidden="true"></i>
            <input type="password" name="password" class="form-control required" placeholder="确认密码" required>
          </div>

          <div class="d-grid gap-2">
            br
            <button class="btn btn-success">找回密码</button>
          </div>
        </div>
      </form>
    </div>
  </div>
  h2
  form(action="" method="post")
    div 新密码:
      input(type="password" name="password")
    div 重复新密码:
      input(type="password" name="password1")
    button 提交
  script.
    $('form').on('submit', (e) => {
      var pwd = $('input[name="password"]').val()
      pwd = SparkMD5.hash(pwd)
      $('input[name="password"]').val(pwd)

      var pwd = $('input[name="password1"]').val()
      pwd = SparkMD5.hash(pwd)
      $('input[name="password1"]').val(pwd)
    })
