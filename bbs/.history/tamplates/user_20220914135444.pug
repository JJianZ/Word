extend layout.pug


block content
  <div class="container">
    <div class="row">
      <div class="col-lg-2 hidden-md hidden-sm">
        <div class="card">
            <img class="avatar" src="/avatar/#{user.avatar}" width="50" height="50">
            <p>#{user.name}</p>
        </div>
      </div>
      <div class="col-lg-10">
        <div class="card posts">
          <h4>Ta发过的帖子</h4>
          <div class="card-body">
            each post in posts
              div
                <a href="/post/#{post.postId}">#{post.title}</a>
          </div>
        </div>
        <div class="card comments">
          <h4>Ta发过的评论</h4>
          <div class="card-body">
            each comment in comments
              <div>
                <a href="/post/#{comment.postId}">#{comment.title}</a>
                <br>
                span= comment.content
                <hr>
              </div>
          </div>
        </div>
      </div>
    </div>
