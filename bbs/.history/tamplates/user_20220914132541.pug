extend layout.pug


block content
  <div class="container">
    <div class="row">
      <div class="main">
        <div class="card card-thread">
          <div class="card-body">
            <div class="media">
              <img src="/avatar/#{user.avatar}">
              <div class="media-body">
                <h2>#{post.title}</h2>
                <div class="d-flex small">

                  a(href="/user/" + post.userId)= post.name
                  <span class="date text-grey hidden-sm">#{post.createdAt}</span>
                </div>
              </div>
            </div>
            br
            <div class="message">
              <p>#{post.content}</p>
                if post.name == loginName
                  button.delete(data-post-id=post.postId) 删除帖子
            </div>
          <div>
        </div>
      </div>
    </div>
  </div>
  <img class="avatar" src="/avatar/#{user.avatar}">
  <h2>#{user.name}</h2>
  <hr>


  <h3>Ta发过的帖子</h3>
  each post in posts
    div
      a(href="/post/#{post.postId}")= post.title

  <h3>Ta发过的评论</h3>

  each comment in comments
    <div>
      <a href="/post/#{comment.postId}">#{comment.title}</a>
      <br>
      span= comment.content
      <hr>
    </div>
