extend layout.pug

block content
  <div class="container">
    <div class="row">
      <div class="col-lg-10 mx-auto">
        <div class="card">
          <h6 class="card-header">发贴</h6>
          <div class="card-body">
            <form action="/add-post" method="post" class="form-horizontal col-sm-offset-3 col-md-offset-3">
              <div class="form-group">
                <input type="text" name="title" class="form-control" placeholder="请输入标题" required autofocus>
              </div>
              <div class="form-group">
                br
                <textarea name="content" cols="30" rows="8" class="form-control"></textarea>
              </div>
              <button>发贴</button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>



